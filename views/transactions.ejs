<!DOCTYPE html>
<html lang="en">

    <%- include('partials/nav.ejs') %>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Basic Banking System</title>
        <link rel="icon" href="../images/Bank.png" type="image/x-icon">
        <link rel="stylesheet" href="../css/customers.css" />
    </head>

    <body>
            <h1>Transactions</h1>
            <table class="table-1">
                <tr>
                    <th>Sender</th>
                    <th>Receiver</th>
                    <th>Amount Transffered</th>
                    <th>Date and Time</th>
                </tr>
            
                <% transactions.forEach(function(transaction) { %>
                <tr class="table-rt">
                    <td>
                        <%= transaction.Sender %>
                    </td>
                    <td>
                        <%= transaction.Receiver %>
                    </td>
                    <td>
                        <%= transaction.AmountTransferred %>
                    </td>
                    <td>
                        <%= transaction.DateAndTime %>
                    </td>
                </tr>
            <% }); %>
        </table>

    </body>

</html>